<AnchorPane prefHeight="313.0" prefWidth="244.0" stylesheets="@../css/root.css" xmlns="http://javafx.com/javafx/8.0.241" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jun.lineyou.ui.controller.SignUpController">
    <children>
