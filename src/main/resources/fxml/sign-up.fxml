            <children>
                <HBox spacing="30.0">
                    <children>
                        <FontAwesomeIconView glyphName="MOBILE" size="30" />
                        <JFXTextField fx:id="mobile" promptText="手机号" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </JFXTextField>
                    </children>
                </HBox>
                <HBox spacing="23.0">
                    <children>
                        <FontAwesomeIconView glyphName="USER" size="25" />
                        <JFXTextField fx:id="nickname" promptText="昵称" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox spacing="18.0">
                    <children>
                        <FontAwesomeIconView glyphName="KEY" size="25" />
                        <JFXPasswordField fx:id="password" promptText="密码" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <JFXButton layoutX="35.0" layoutY="244.0" onAction="#signUp" prefHeight="31.0" prefWidth="175.0" text="注册" />
        <Separator layoutX="23.0" layoutY="210.0" prefWidth="200.0" />
      <HBox alignment="CENTER" layoutX="108.0" layoutY="284.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
              <Label fx:id="notice" style="-fx-background-radius: 5;" textFill="#9a222299" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
    </children>
